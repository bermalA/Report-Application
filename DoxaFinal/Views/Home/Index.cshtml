@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_LayoutSidebar.cshtml";
}

<div class="container-fluid p-5" style="width:inherit">
    <div class="row mb-5 gap-3" style="width:90%;">
        <div class="col shadow-sm pb-4 pt-3 rounded-3" style="background-color:#EFF0F3;">
            <div class="number display-2">89</div>
            <div class="label fs-5">number of something</div>
        </div>
        <div class="col shadow-sm rounded-3" style="background-color: #cbe6f9;">
            b
        </div>
        <div class="col shadow-sm rounded-3" style="background-color:#EFF0F3;">
            c
        </div>
    </div> 
    <div class="row mt-5" style="width:90%;">
        <canvas id="myChart" class="w-100 h-75"></canvas>
    </div>
</div>

<script>
    const ctx = document.getElementById('myChart');

    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['Red', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange'],
            datasets: [{
                label: '# of Votes',
                data: [12, 19, 3, 5, 2, 3],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>